<div>

<div class="videos">
	{{#if user.isLogged}}
		{{#if videos.length}}
			{{#each videos}}
				<div fronty-component="UserVideoComponent" key="{{id}}" model="videos[{{@index}}]" id="uservideo-{{id}}"></div>
			{{/each}}
		{{else}}
			<nav class="marco_superior">
				<img class="imagen_video" src="{{user.selectedUser.foto_perfil}}" alt={{i18n 'Loading...'}}/>
				<h6 id="autor">{{user.selectedUser.login}}@{{user.selectedUser.alias}}</h6>
				<p>{{i18n 'It looks like this user has not uploaded anything yet...'}}</p>
			</nav>
		{{/if}}
</div>
	{{else}}
		<h1>{{i18n 'Hello, you need an account to visit other users profile'}}</h1>
	{{/if}}

</div>