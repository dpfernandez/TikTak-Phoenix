<div key="{{id}}">


<nav class="marco_superior">
	<img class="imagen_video" src="{{user.currentUser.foto_perfil}}" alt={{i18n 'Loading...'}}/>
	<h6>{{user.currentUser.login}}@{{user.currentUser.alias}}</h6>
	<p>{{texto}}</p>
</nav>
<video class="video" src="{{ubicacion}}" width="780" height="600" id="video-{{id}}" muted autoplay loop preload></video>
<nav class="marco_inferior">
	<button id="watch" class="watch-button" item="{{id}}"><h6>{{i18n 'watch'}}</h6></button>
	{{#if_eq visible "es_visible"}}
		<button id="hide" class="hideUnHide-button" item="{{id}}"><h6>{{i18n 'hide'}}</h6></button>
	{{/if_eq}}
	{{#if_eq visible "no_visible"}}
		<button id="unhide" class="hideUnHide-button" item="{{id}}"><h6>{{i18n 'unhide'}}</h6></button>
	{{/if_eq}}
	<button id="delete" class="delete-button" item="{{id}}"><h6>{{i18n 'delete'}}</h6></button>
</nav>

</div>