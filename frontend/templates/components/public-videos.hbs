<div>

<div class="videos">
	{{#if user.isLogged}}
		{{#if videos.length}}
			{{#each videos}}
				<div fronty-component="PublicVideoComponent" key="{{id}}" model="videos[{{@index}}]" id="public-{{id}}"></div>
			{{/each}}
		{{else}}
			<nav class="marco_superior">
				<img class="imagen_video" src="{{user.currentUser.foto_perfil}}" alt={{i18n 'Loading...'}}/>
				<h6 id="autor">{{user.currentUser.login}}@{{user.currentUser.alias}}</h6>
				<p>{{i18n 'Upload some videos please!'}}</p>
			</nav>
		{{/if}}
	{{/if}}
</div>

</div>
